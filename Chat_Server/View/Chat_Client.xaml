<Window x:Class="Chat_Server.View.Chat_Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Server.View"
        mc:Ignorable="d"
        Title="Chat_Client" Height="450" Width="800" MaxHeight="450" MinHeight="450" MaxWidth="800" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>
        <ListBox Name="list_box" >
            
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <TextBox Name="TXT_BOX" Background="WhiteSmoke" Margin="100,0,0,0"  HorizontalAlignment="Center" Width="500" Height="45"  VerticalAlignment="Center"></TextBox>
            <Button Width="100" FontSize="18" Height="45" Command="{Binding Send_Btn}" >Send</Button>
        </StackPanel>
    </Grid>
</Window>
